{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["./*.js", "./*.jsx", "./*.tsx", "./*.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
